#!/usr/bin/env bash

# Barik yabai configuration example
# Add top_padding to leave space for the bar

yabai -m config layout bsp
yabai -m config top_padding 55      # Space for Barik bar
yabai -m config bottom_padding 10
yabai -m config left_padding 10
yabai -m config right_padding 10
yabai -m config window_gap 5

# If using Barik at bottom instead:
# yabai -m config top_padding 10
# yabai -m config bottom_padding 55
